<Window x:Class="LetsSettleITRockPaperScissors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetsSettleITRockPaperScissors"
        mc:Ignorable="d"
        Title="LET'S SETTLE IT - ROCK PAPER SCISSORS-STYLE" Height="450" Width="800" Background="Black">
    <Grid>
        <Button x:Name="button" 
                Background="DarkSlateGray"
                BorderThickness="3"
                BorderBrush="PaleGreen"
                FontSize="45"
                FontWeight="Bold"
                Content="New Game" 
                HorizontalAlignment="Left" 
                Height="127" 
                Command="{Binding NewGameCommand}"
                Margin="129,145,0,0" 
                VerticalAlignment="Top" 
                Width="506"
                />
        <Frame x:Name="Main" NavigationUIVisibility="Hidden">
        </Frame>
    </Grid>
</Window>
